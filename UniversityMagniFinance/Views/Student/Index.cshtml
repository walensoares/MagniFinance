@model IEnumerable<UniversityMagniFinance.Business.StudentsInformation>

@{
    ViewBag.Title = "Index";
}

<h2>List of Students</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            Registrantion Number
        </th>
        <th>
            Birthday
        </th>
        <th>
            Subjects
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Student.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Student.RegistrantionNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Student.BirthDay)
    </td>
    <td>
        @foreach (var itemGrade in item.GradesInformation)
        {
            <table>
                <tr>
                    <th>

                    </th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItemGrade => itemGrade.Name)   @Html.DisplayFor(modelItemGrade => itemGrade.Grade)
                    </td>
                </tr>
            </table>
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { controller = "Student", id = item.Student.ID }, new { @class = "editButton" })
    </td>
</tr>
}

</table>

<p>
    @Html.ActionLink("New", "Create", null, null, new { @class = "btn btn-success" })
</p>
