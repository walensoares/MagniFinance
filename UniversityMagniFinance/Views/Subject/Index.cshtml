@model IEnumerable<UniversityMagniFinance.Business.SubjectsInformation>

@{
    ViewBag.Title = "Subjects";
}

<h2>List of Subjects</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Teacher
        </th>
        <th>
            Average Grade
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.Name) | Salary: @Html.DisplayFor(modelItem => item.Teacher.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageGrade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { controller = "Subject", id = item.ID }, new { @class = "editButton" })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("New", "Create", null, null, new { @class = "btn btn-success" })
</p>
