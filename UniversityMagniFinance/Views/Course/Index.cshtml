@model IEnumerable<UniversityMagniFinance.Business.CoursesInformation>

@{
    ViewBag.Title = "Courses";
}

<h2>List of Courses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Number of Teachers
        </th>
        <th>
            Number of Students
        </th>
        <th>
            Grade Average
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QTeachers)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.QStudents)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AverageGrade)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { controller = "Course", id = item.ID }, new { @class = "editButton" })
    </td>
</tr>
}

</table>

<p>
    @Html.ActionLink("New", "Create", null, null, new { @class = "btn btn-success" })
</p>
